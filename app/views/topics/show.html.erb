<div class="row">
  <div class="col-6">
    <%= render @topic %>
  </div>
  <div class="col-6 border rounded p-5">
    <%= simple_form_for([@topic, Comment.new]) do |f| %>
      <%= f.input :content, label: 'Message', input_html: { rows: 7 } %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.submit class: 'btn btn-outline-light btn-sm' %>
    <% end %>
  </div>
</div>

<div class="btn-group my-5">
  <%= link_to "Edit this topic", edit_topic_path(@topic), class: "btn btn-sm btn-outline-light" %>
  <%= link_to "Back to topics", topics_path, class: "btn btn-sm btn-outline-light" %>
  <%= button_to "Destroy this topic", @topic, method: :delete, class: "btn btn-sm btn-outline-light" %>
</div>

<div class="row">
  <% if @topic.comments.any? %>
    <div class="border rounded p-5">
      <% @topic.comments.each do |comment| %>
        <div class="card p-3 border border-primary">
          <%= comment.content %>
        </div><br>
      <% end %>
    </div>
  <% end %>
</div>
